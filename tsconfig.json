{
    "compilerOptions": {
        "target": "ES2018",
        "useDefineForClassFields": true,
        "module": "CommonJS",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "lib": [
            "es2020",
            "DOM",
            "DOM.Iterable"
        ],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "strict": true,
        "noUnusedLocals": false, // Enable
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": false
    },
    "include": [
        "src",
        "lib"
    ],
    "exclude": [
        "cdk.out"
    ]
}